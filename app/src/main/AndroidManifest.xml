<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.learnjava">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".TutorialView"
            android:theme="@style/Base.Theme.AppCompat.Light"
            ></activity>
        <activity android:name=".Submenu.Compiler"
            android:theme="@style/Base.Theme.AppCompat.Light"
            />
        <activity android:name=".MenuActivity1"
            android:theme="@style/CustomActionBarTheme"/>
        <activity android:name=".Submenu.Questions"
            android:label="Important Questions"/>
        <activity android:name=".Submenu.TutorialList"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity
            android:name=".ProglistUI.Basic"
            android:label="Program and Output" />
        <activity android:name=".Submenu.Programs"
            android:theme="@style/Base.Theme.AppCompat.Light"/>
        <activity android:name=".SplashScreen"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@menu/search" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>